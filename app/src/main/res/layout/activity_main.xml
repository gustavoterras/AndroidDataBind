<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="user"
            type="br.com.infoterras.bindapplication.model.User" />
    </data>

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorPrimaryDark"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <br.com.infoterras.bindapplication.components.GlideImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10pt"
            app:src="@{user.avatar_url}"/>

        <TextView style="@style/TextAppearanceColorTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.name}" />

        <TextView style="@style/TextAppearanceColorTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.bio}" />

        <TextView style="@style/TextAppearanceColorTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.location}" />

        <TextView style="@style/TextAppearanceColorTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.email}" />

        <TextView style="@style/TextAppearanceColorTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.blog}" />

        <TextView style="@style/TextAppearanceColorTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "@{String.format(@string/public_repos, user.public_repos)}" />

        <TextView style="@style/TextAppearanceColorTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "@{String.format(@string/followers, user.followers)}" />

        <TextView style="@style/TextAppearanceColorTheme.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "@{String.format(@string/following, user.following)}" />

    </LinearLayout>
</layout>