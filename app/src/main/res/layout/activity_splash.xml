<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimaryDark"
        tools:context="br.com.infoterras.bindapplication.activity.SplashActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_github" />

            <TextView
                android:id="@+id/tv_message1"
                style="@style/TextAppearanceColorTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Obrigado por usar nosso aplicativo"
                android:textSize="20sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_message2"
                style="@style/TextAppearanceColorTheme.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="até a próxima, tchau ;)"
                android:textSize="20sp"
                android:visibility="invisible" />

        </LinearLayout>

    </RelativeLayout>
</layout>