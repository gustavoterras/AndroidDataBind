<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--TextAppearance Style-->
    <style name="TextAppearanceColorTheme.EditText" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="TextAppearanceColorTheme.TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
